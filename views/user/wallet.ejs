<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>wallet</title>
</head>
<header>
    <%- include('../partial/userheader.ejs') %>
</header>

<body>
    <div class="container mx-auto p-4 grid grid-cols-1 sm:grid-cols-2 ">
        <div class="hidden sm:block bg-white p-4 rounded-lg shadow-md w-1/2">
            <h2 class="text-lg font-semibold mb-2">Account</h2>
            <hr class="dark:border-gray-400">
            <!-- Add your subcategory content here -->
            <ul class="mt-2">
                <li><a href="/profile">Profile information</a></li>
                <li><a href="/profile">Manage Address</a></li>
            </ul>
            <hr class="dark:border-gray-400 mt-2">
            <h2 class="text-lg font-semibold mb-2 mt-2">My Orders</h2>
            <hr class="dark:border-gray-400">
            <ul class="mt-2">
                <li><a href="/myOrder">Orders Status</a></li>
            </ul>
            <hr class="dark:border-gray-400 mt-2 ">
            <h2 class="text-lg font-semibold mb-2 mt-2">Wallet</h2>
            <hr class="dark:border-gray-400">
            <ul class="mt-2">
                <li><a href="/wallet">Manage wallet</a></li>

            </ul>
            <hr class="dark:border-gray-400 mt-2 ">
        </div>
        <div style="margin-left: -40%;" class="sm:block bg-white p-4 rounded-lg shadow-md w-full">
            <div class="flex justify-center">
                <h2 class="text-3xl font-bold mb-4">Wallet</h2>
            </div>
            <div class="flex justify-center items-center space-x-4 mb-4">
                <!-- Wallet Balance -->
                <div>
                    <h3 class="text-lg font-semibold">Wallet Balance:</h3>
                    <p class="text-2xl font-bold text-[#FE5401]">₹<%= walletBalance.toFixed(2) %></p>
                </div>
                <!-- Add Fund Button -->
                <button
                    class="flex items-center gap-2 rounded-lg bg-[#FE5401] px-4 py-2.5 text-xl font-bold text-white hover:bg-[#FF7308]">
                    <span>Add Fund</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                </button>
                <!-- Withdraw Button -->
                <button
                    class="flex items-center gap-2 rounded-lg bg-[#FE5401] px-4 py-2.5 text-xl font-bold text-white hover:bg-[#FF7308]">
                    <span>Withdraw</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 5a3 3 0 00-3 3v10a3 3 0 006 0V8a3 3 0 00-3-3z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 10V3M7 7a2 2 0 012-2h3a2 2 0 012 2m0 0v10a2 2 0 01-2 2H9a2 2 0 01-2-2m0 0V7"></path>
                    </svg>
                </button>
            </div>
            <hr class="dark:border-gray-400">
            <div>
                <h3 class="text-2xl font-bold mb-2">Transaction History</h3>                                 
                <ul>
                    <% transactions.forEach(transaction => { %>
                        <li class="flex items-center justify-between mb-2">
                            <div class="flex items-center">
                                <% if(transaction.type == 'credit'){ %>
                                <span class="text-green-500">₹<%= transaction.amount.toFixed(2) %> </span>
                                <% }else{ %>
                                    <span class="text-red-500">₹<%= transaction.amount.toFixed(2) %> </span>
                                    <% }%>
                            </div>
                            <span><%= transaction.timestamp.toDateString() %></span>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>

    </div>
</body>
<footer class="mt-5">
    <%- include('../partial/userfooter.ejs') %>
</footer>

</html>