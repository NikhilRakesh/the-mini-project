          <div class="flex justify-between" >
              <a href="/home" class="text-white bg-blue-600 hover:bg-blue-800 focus-ring-4 focus-outline-none focus-ring-blue-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center">
                Continue Shopping
              </a>
              
              <% console.log('ejs invoice',invoiceId); %>
