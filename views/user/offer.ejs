    <section class="py-16">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-semibold text-gray-800 mb-8">Available Coupons</h2>
            <div class="flex flex-wrap justify-center -mx-4">
                <% coupons.forEach((element , index) => { %>
                <div class=" w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 mb-8" id="coupon<%= index %>" >
                    <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:-translate-y-2">
                        <div class="text-blue-500 text-3xl mb-4">
                            <!-- Your animated SVG image goes here -->
                            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2 L14 8 L20 8 L15 12 L17 18 L12 14 L7 18 L9 12 L4 8 L10 8 Z"
                                    stroke-width="3" fill="none" transform="rotate(0 12 12)">
                                    <animateTransform attributeName="transform" attributeType="XML" type="rotate"
                                        from="0 12 12" to="360 12 12" dur="2s" repeatCount="indefinite" />
                                </path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2">Coupon 1</h3>
                        <p class="text-gray-600">Get <%= element.discountAmount %>% off on your next purchase with this coupon.</p>

                        <!-- Expiry date and copy button -->
                        <div class="text-gray-500 text-sm my-4">
                            <p>Expires on: <%= element.expirationDate.toLocaleDateString() %></p>
                            <button
                                class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-full" type="button" onclick="copyCouponCode('<%= element.couponCode %>')" >Copy
                                Code</button>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>



</body>
<footer class="mt-5">
    <%- include('../partial/userfooter.ejs') %>
</footer>
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
     function copyCouponCode(code) {
        const tempInput = document.createElement('input');
        tempInput.value = code;
        document.body.appendChild(tempInput);

        tempInput.select();
        tempInput.setSelectionRange(0, 99999);

        document.execCommand('copy');

        document.body.removeChild(tempInput);

        Toastify({
            text: `code copied`,
            duration: 3000,
            gravity: 'bottom',
            position: 'center',
            backgroundColor: 'orange',
        }).showToast();
    }

    const openModalButton = document.getElementById('open-modal-button');
    const couponModal = document.getElementById('coupon-modal');

    openModalButton.addEventListener('click', () => {
        couponModal.classList.remove('hidden');
    });

    couponModal.addEventListener('click', (e) => {
        if (e.target === couponModal) {
            couponModal.classList.add('hidden');
        }
    });
</script>

</html>